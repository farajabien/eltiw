# ELTIW (Every Lil Thing I Want) Environment Configuration

# App Configuration
NEXT_PUBLIC_APP_NAME="ELTIW"
NEXT_PUBLIC_APP_URL="https://eltiw.fbien.com"
NEXT_PUBLIC_APP_DESCRIPTION="Every Lil Thing I Want - Track your personal goals with deadline planning, progress tracking, and secure link-based sharing"

# Email Service (for goal snapshot sharing functionality)
# Sign up at https://resend.com for a free API key
RESEND_API_KEY="re_xxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
EMAIL_FROM="ELTIW <noreply@eltiw.fbien.com>"

# Analytics (optional)
# Sign up at https://vercel.com/analytics for goal tracking insights
NEXT_PUBLIC_VERCEL_ANALYTICS_ID=""

# Feature Flags for ELTIW
NEXT_PUBLIC_ENABLE_ENCRYPTION=true
NEXT_PUBLIC_ENABLE_COMPRESSION=true
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_EMAIL_SHARING=true
NEXT_PUBLIC_ENABLE_GOAL_CATEGORIES=true
NEXT_PUBLIC_ENABLE_PROGRESS_TRACKING=true
NEXT_PUBLIC_ENABLE_DEADLINE_ALERTS=true

# Goal Management Configuration
NEXT_PUBLIC_MAX_GOALS_PER_USER=100
NEXT_PUBLIC_MAX_PROGRESS_ENTRIES_PER_GOAL=500
NEXT_PUBLIC_DEFAULT_CURRENCY="KES"
NEXT_PUBLIC_SUPPORTED_CURRENCIES="KES,USD,EUR,GBP"

# Sharing & Security
NEXT_PUBLIC_ENABLE_PUBLIC_GOAL_SHARING=true
NEXT_PUBLIC_ENABLE_PASSWORD_PROTECTION=true
NEXT_PUBLIC_MAX_SHARE_URL_LENGTH=2048

# Development
NODE_ENV="development"
NEXT_PUBLIC_DEBUG_MODE=true
NEXT_PUBLIC_ENABLE_PERFORMANCE_MONITORING=true 